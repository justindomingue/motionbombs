= form_for(@user) do |f|
  - if @user.errors.any? 
    #error_explanation.alert.alert-error.form-alert
      %h2.red-danger
        Fix these errors in order to register:

      %ul
        - @user.errors.full_messages.each do |msg| 
          %li= msg 

  .field
    = f.label :username
    .controls
      .input-prepend
        %span.add-on
          %i.icon-user
        = f.text_field :username, :class => "form-field small-text-field" 
  .field
    = f.label :email
    .controls
      .input-prepend
        %span.add-on
          %i.icon-envelope
        = f.text_field :email, :class => "form-field small-text-field" 

  .field
    = f.label :password
    .controls
      .input-prepend
        %span.add-on
          %i.icon-lock
        = f.password_field :password, :class => "form-field small-text-field" 
  
  .field
    = f.label :password_confirmation
    .controls
      .input-prepend
        %span.add-on
          %i.icon-lock
        = f.password_field :password_confirmation, :class => "form-field small-text-field" 
  %br
  
  .actions
    = f.submit 'Register', class:"btn btn-warning btn-large", "data-disable-with"=> "Just a moment..."
