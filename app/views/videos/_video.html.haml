%li.span3
  .thumbnail
    = link_to image_tag(video.thumb, size:"260x145"), video_path(video)
    .thumb_info
      %h5= truncate video.title, length:20
      %p
        = video.views
        %i.icon-eye-open.video-counts
        
        = video.likes.count
        %i.icon-heart.video-counts
        
        - unless video.video_comments.empty?
          = video.video_comments.count
          %i.icon-comment.video-counts
          